<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link rel="shortcut icon" href="#">
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.5.0/css/all.min.css" rel="stylesheet">
    <script src="https://code.jquery.com/jquery-3.6.0.js" integrity="sha256-H+K7U5CnXl1h5ywQfKtSj8PCmoN9aaq30gDh27Xc0jk=" crossorigin="anonymous"></script>
</head>
<body>
    @{
        var pageName = ViewContext.RouteData.Values["controller"].ToString();
    }
    <div class="@(pageName == "Categories" ? "container" : "container-fluid")">
        <div class="row">
            <main class="container">
                <nav class="navbar navbar-top navbar-expand navbar-dashboard navbar-dark pl-0 pr-2 pb-0">
                    <div class="container-fluid px-0">
                        <div class="d-flex justify-content-between w-100" id="navbarSupportedContent">

                            <nav aria-label="breadcrumb">
                                <ol class="breadcrumb breadcrumb-dark breadcrumb-transparent">
                                    <li class="breadcrumb-item"><a href="/Categories/"><span class="fas fa-home"></span></a></li>
                                    <li class="breadcrumb-item"><a href="/Categories/Index/">Categorías</a></li>
                                    <li class="breadcrumb-item"><a href="/Products/">@(pageName == "Categories" ? "" : "Productos")</a></li>
                                </ol>
                            </nav>
                        </div>
                    </div>
                </nav>
                <div class="row">
                    <div class="col-12">
                        @RenderBody()
                    </div>
                </div>
            </main>
        </div>
    </div>
    <footer class="footer section py-5">
        <div class="container-fluid">
            <div class="row">
                <div class="col-12 col-lg-6 mb-4 mb-lg-0">
                    <p class="mb-0 text-center text-xl-left">
                        &copy; @DateTime.Now.Year - My ASP.NET Application
                    </p>
                </div>
            </div>
        </div>
    </footer>
</body>
</html>