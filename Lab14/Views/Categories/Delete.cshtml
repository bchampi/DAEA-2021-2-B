@model Categories

@{
    ViewBag.Title = "Delete";
}

<div class="col-12 d-flex justify-content-center">
    <div class="row col-8">
        <div class="card">
            <div class="card-body bg-white border-light shadow-sm">
                <h2 class="h5 mb-4">Eliminar Categoría</h2>
                <div class="row mt-1 mb-1">
                    <div class="col-md-6 mb-3">
                        <label for="category_name">ID</label>
                        <div class="input-group">
                            @Html.TextBoxFor(model => model.CategoryID, new { @class = "form-control", @id = "category_name", @readonly = "true" })
                        </div>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label for="category_name">Nombre</label>
                        <div class="input-group">
                            @Html.TextBoxFor(model => model.CategoryName, new { @class = "form-control", @id = "category_name", @readonly = "true" })
                        </div>
                    </div>
                    <div class="mb-3">
                        <label for="category_description">Descripción</label>
                        <div class="input-group">
                            @Html.TextBoxFor(model => model.Description, new { @class = "form-control", @id = "category_description", @readonly = "true" })
                        </div>
                    </div>
                </div>
                @using (Html.BeginForm())
                {
                    <button type="submit" class="btn btn-danger"><i class="fas fa-trash"></i> Eliminar</button>
                    <a href="/Categories/Index/" class="btn btn-black"><i class="fas fa-times-circle"></i> Regresar</a>
                }
            </div>
        </div>
    </div>
</div>