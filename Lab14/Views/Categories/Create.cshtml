@model Categories

@{
    ViewBag.Title = "Create";
}

<div class="col-12 d-flex justify-content-center">
    <div class="row col-8">
        <div class="card">
            <div class="card-body bg-white border-light shadow-sm">
                <h2 class="h5 mb-4">Crear Categoria</h2>
                @using (Html.BeginForm())
                {
                    @Html.ValidationSummary(true)

                    <div class="row mt-1 mb-1">
                        <div class="col-md-6 mb-3">
                            <label for="category_name">Nombre</label>
                            <div class="input-group">
                                @Html.TextBoxFor(model => model.CategoryName, new { @class = "form-control", @id = "category_name" })
                            </div>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="category_description">Descripción</label>
                            <div class="input-group">
                                @Html.TextBoxFor(model => model.Description, new { @class = "form-control", @id = "category_description" })
                            </div>
                        </div>
                    </div>
                    <button type="submit" class="btn btn-tertiary">Guardar</button>
                    <a href="/Categories/Index/" class="btn btn-black">Regresar</a>
                }
            </div>
        </div>
    </div>
</div>