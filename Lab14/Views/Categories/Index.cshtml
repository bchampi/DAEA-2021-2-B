@model IEnumerable<Lab14.Categories>

@{
    ViewBag.Title = "Index";
    var count = 1;
}

<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h2 class="h4 mb-0">Listado de Categorías</h2>
        <a href="/Categories/Create/" class="btn btn-blue">Crear Categoría <i class="fas fa-plus-circle"></i></a>
    </div>
    <div class="card-body">
        <table class="table table-centered table-nowrap mb-0 rounded">
            <thead class="thead-light">
                <tr>
                    <th>N°</th>
                    <th>NOMBRE</th>
                    <th>DESCRIPCIÓN</th>
                    <th class="text-center">ACCIONES</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Count() != 0)
                {
                    foreach (var item in Model)
                    {
                        <tr>
                            <td class="border-0">@(count ++)</td>
                            <td class="border-0">@item.CategoryName</td>
                            <td class="border-0">@item.Description</td>
                            <td class="border-0 text-center">
                                <a href="/Products/Details/@item.CategoryID" class="btn btn-sm btn-tertiary" title="Productos"><i class="fas fa-box-open"></i></a>
                                <a href="/Categories/Edit/@item.CategoryID" class="btn btn-sm btn-warning" title="Editar"><i class="fas fa-edit"></i></a>
                                <a href="/Categories/Delete/@item.CategoryID" class="btn btn-sm btn-danger" title="Eliminar"><i class="fas fa-trash"></i></a>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="3" class="border-0"><strong class="d-flex justify-content-center">No hay categorias registradas. Cree una</strong></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>