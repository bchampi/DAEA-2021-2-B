@model Practica04.Models.Prestamos

@{
    ViewBag.Title = "Delete";
}

<div class="col-12 d-flex justify-content-center">
    <div class="row col-8">
        <div class="card">
            <div class="card-body bg-white border-light shadow-sm">
                <h2 class="h5 mb-4">Eliminar Prestamo</h2>
                <div class="row mt-1 mb-1">
                    @Html.ValidationSummary(true)
                    @Html.HiddenFor(model => model.Libro.Titulo)
                    <div class="col-md-6 mb-3">
                        <label>Nombre</label>
                        <div class="input-group">
                            @Html.EditorFor(model => model.Usuario.Nombre, new { htmlAttributes = new { @class = "form-control", @readonly = "true" } })
                        </div>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label>Proveedor</label>
                        <div class="input-group">
                            @Html.EditorFor(model => model.FechaPrestamo, new { htmlAttributes = new { @class = "form-control", @readonly = "true" } })
                        </div>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label>Categoría</label>
                        <div class="input-group">
                            @Html.EditorFor(model => model.FecDevolucion, new { htmlAttributes = new { @class = "form-control", @readonly = "true" } })
                        </div>
                    </div>
                </div>
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-danger"><i class="fas fa-trash"></i> Eliminar</button>
                    <a href="/Prestamos/" class="btn btn-black"><i class="fas fa-times-circle"></i> Regresar</a>
                }
            </div>
        </div>
    </div>
</div>