@model List<Lab15.Models.Person>

@{
    ViewBag.Title = "Index";
    var count = 1;
}

<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h2 class="h4 mb-0">Listado de Personas</h2>
        <div class="d-flex">
            <a href="/Person/Report/" class="btn btn-blue mr-2">Reporte <i class="fas fa-chart-line"></i></a>
            <a href="/Person/Graphic/" class="btn btn-dark">Gráficos <i class="fas fa-chart-bar"></i></a>
        </div>
    </div>
    <div class="card-body" id="grdProducts">
        <table class="table table-centered table-nowrap mb-0 rounded">
            <thead class="thead-light">
                <tr>
                    <th>N°</th>
                    <th>NOMBRE</th>
                    <th>APELLIDOS</th>
                    <th>FECHA INSCRIPCIÓN</th>
                    <th>FECHA CONTRATO</th>
                    <th class="text-center">ACCIONES</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Count() != 0)
                {
                    foreach (var item in Model)
                    {
                        <tr>
                            <td class="border-0">@(count ++)</td>
                            <td class="border-0">@item.FirstName</td>
                            <td class="border-0">@item.LastName</td>
                            <td class="border-0">@item.EnrollmentDate</td>
                            <td class="border-0">@item.HireDate</td>
                            <td class="border-0 text-center">
                                <a href="/Products/Edit/@item.PersonID" class="btn btn-sm btn-warning"
                                   title="Editar"><i class="fas fa-edit"></i></a>
                                <a href="/Products/Delete/@item.PersonID" class="btn btn-sm btn-danger"
                                   title="Eliminar"><i class="fas fa-trash"></i></a>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="10" class="border-0"><strong class="d-flex justify-content-center">No hay productos registros, agregue uno.</strong></td>
                    </tr>
                }
            </tbody>
        </table>

    </div>
</div>